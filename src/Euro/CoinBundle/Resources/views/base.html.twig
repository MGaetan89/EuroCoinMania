<!DOCTYPE html>
<html>
<head>
	<link href="{{ asset('bundles/eurocoin/css/bootstrap.css') }}" rel="stylesheet" />
	<link href="{{ asset('bundles/eurocoin/css/style.css') }}" rel="stylesheet" />
	<link href="{{ asset('bundles/eurocoin/css/bootstrap-responsive.css') }}" rel="stylesheet" />

	<meta charset="UTF-8" />

	<script src="{{ asset('bundles/eurocoin/js/jquery.js') }}" type="text/javascript"></script>
	<script src="{{ asset('bundles/eurocoin/js/bootstrap.js') }}" type="text/javascript"></script>
	<script src="{{ asset('bundles/eurocoin/js/app.js') }}" type="text/javascript"></script>

	<title>{% block title %}{{ 'sitename'|trans }}{% endblock %}</title>
</head>
<body>
<div class="navbar navbar-fixed-top">
	<div class="navbar-inner">
		<div class="container">
			<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</a>

			<a class="brand" href="#">{{ 'sitename'|trans }}</a>

			<div class="nav-collapse">
				<ul class="nav">
					<li class="dropdown">
						<a href="#" class="dropdown-toggle" data-toggle="dropdown">{{ 'countries'|trans }}<b class="caret"></b></a>
						<ul class="dropdown-menu">
							<li><a href="{{ path('country') }}">{{ 'country.list'|trans }}</a></li>
							<li class="divider"></li>
							{% for country in euro_countries %}
							<li><a href="{{ path('country_show', { 'id': country.id }) }}">{{ country.name|trans }}</a></li>
							{% endfor %}
						</ul>
					</li>
				</ul>
			</div>
		</div>
	</div>
</div>

<div class="container">
	{% block body %}{% endblock %}
</div>
</body>
</html>
