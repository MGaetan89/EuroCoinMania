{% extends 'EuroCoinBundle:Exchange:base.html.twig' %}

{% block title %}{{ 'coin.exchange'|trans }}{% endblock %}

{% block content %}
<div class="alert alert-block alert-info fade in">
	<button type="button" class="close" data-dismiss="alert">Ã—</button>

	<h4>{{ 'information'|trans }}</h4>

	{{ 'coin.exchange_explain'|trans|raw }}
</div>

<ul class="thumbnails">
	{% for user in users %}
	{% set amount = user['total'] %}
	<li class="span2">
		<a class="thumbnail" href="{{ path('exchange_coins_request', { id: user['id'], name: user['username'] }) }}">
			<img alt="{{ user['username'] }}" src="{{ gravatar(user['email']) }}" title="{{ user['username'] }}" />

			<div class="caption">
				<h4>{{ user['username'] }}</h4>
				<small>{{ 'coin.doubles'|transchoice(amount, { '%amount%': amount }) }}</small>
			</div>
		</a>
	</li>
	{% endfor %}
</ul>
{% endblock %}
