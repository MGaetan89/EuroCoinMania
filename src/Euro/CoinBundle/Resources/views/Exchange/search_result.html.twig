{% extends 'EuroCoinBundle:Exchange:base.html.twig' %}

{% block title %}{{ 'exchange.search_coins'|trans }}{% endblock %}

{% block content %}
<div class="alert alert-block alert-info fade in">
	<button type="button" class="close" data-dismiss="alert">Ã—</button>

	<h4>{{ 'information'|trans }}</h4>

	{{ 'coin.exchange_explain'|trans|raw }}
</div>

<div class="row-fluid">
	{% for match in matches %}
		{% set user = match[0].user %}
		{% set path = path('exchange_coins_request', { id: user.id, name: user.username }) %}

		{% if loop.index0 > 0 and loop.index0 % 3 == 0 %}
			</div>
			<div class="row-fluid">
		{% endif %}

		<div class="span4">
			<div class="media" style="margin-bottom: 10px;">
				<a class="pull-left thumbnail" href="{{ path }}">
					<img alt="{{ user.username }}" src="{{ gravatar(user.email, 50) }}" title="{{ user.username }}" />
				</a>

				<div class="media-body">
					<h4 class="media-heading"><a href="{{ path }}">{{ user.username }}</a></h4>

					{{ 'coin.doubles'|transchoice(match.total, { '%amount%': match.total }) }}
				</div>
			</div>
		</div>
	{% endfor %}
</div>
{% endblock %}

