{% extends "::base.html.twig" %}

{% block body %}
<h2 class="page-header">Actualités</h2>

<div class="row-fluid">
	{% for post in posts %}
			{% if loop.index0 > 0 and loop.index0 % 3 == 0 %}
				</div>
				<div class="row-fluid">
			{% endif %}

		<div class="span4">
			<h3><a href="{{ url('sonata_news_view', { 'permalink': sonata_news_permalink(post) }) }}">{{ post.title }}</a></h3>

			<p>{{ post.abstract }}</p>
			<p>
				<span class="muted">Posté par {{ post.author }} le {{ post.publicationDateStart|format_datetime }}</span>
			</p>
		</div>
	{% else %}
		<div class="alert">Aucune news n'a été publié pour le moment</div>
	{% endfor %}
</div>
{% endblock %}
