{% extends 'EuroCoinBundle::base.html.twig' %}

{% block title %}{{ 'value.editing'|trans({ '%name%': value.value|trans }) }}{% endblock %}

{% block body %}
<div class="page-header">
	<h1>{{ block('title') }}</h1>
</div>

<form action="{{ path('value_update', { 'id': value.id }) }}" method="post" {{ form_enctype(edit_form) }}>
	{{ form_widget(edit_form) }}

	<div class="form-actions">
		<div class="pull-left">
			<button class="btn btn-primary" type="submit"><i class="icon-white icon-pencil"></i> {{ 'action.edit'|trans }}</button>
			<a class="btn" href="{{ path('value') }}"><i class="icon-arrow-left"></i> {{ 'action.back_to_list'|trans }}</a>
		</div>

		<form action="{{ path('value_delete', { 'id': value.id }) }}" method="post">
            {{ form_widget(delete_form) }}

            <button class="btn btn-danger pull-right" type="submit"><i class="icon-white icon-trash"></i> {{ 'action.delete'|trans }}</button>
        </form>
	</div>
</form>
{% endblock %}
