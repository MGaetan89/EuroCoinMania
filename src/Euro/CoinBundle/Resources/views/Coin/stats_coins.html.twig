							<blockquote>
								{{ coin.description }}

								<small>
									{{ 'stats.number_of_member'|transchoice(total, {
										'%total%': total|number_format
									}) }}
								</small>
							</blockquote>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	</div>
	<div class="span6">
