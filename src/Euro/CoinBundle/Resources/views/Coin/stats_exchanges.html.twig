<h3 class="page-header">{{ 'stats.exchanges_repartition'|trans }}</h3>

<div class="row-fluid">
	<div class="span6">
		<table class="table table-bordered table-hover table-striped">
			<thead>
				<tr>
					<th>{{ 'user.username'|trans }}</th>
					<th>{{ 'stats.total'|trans }}</th>
					<th>{{ 'exchange.status1'|trans }}</th>
					<th>{{ 'exchange.status2'|trans }}</th>
					<th>{{ 'exchange.status3'|trans }}</th>
					<th>{{ 'exchange.status4'|trans }}</th>
				</tr>
			</thead>
			<tbody>
				{% for userId, exchange in user_exchanges %}
					{% set user = exchange.user %}

					<tr>
						<td>
							<a href="{{ path('show_profile', { id: userId }) }}"{% if not user.publicprofile %} rel="nofollow"{% endif %}>
								{{- user.username -}}
							</a>
						</td>
						<td><strong>{{ exchange.total }}</strong></td>
						<td>{{ exchange[1] }}</td>
						<td>{{ exchange[2] }}</td>
						<td>{{ exchange[3] }}</td>
						<td>{{ exchange[4] }}</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
	<div class="span6">
		<div id="chart_user_exchanges"></div>
	</div>
</div>

<h3 class="page-header">{{ 'stats.exchanges_status'|trans }}</h3>

<div id="chart_exchanges"></div>

