{% extends 'EuroCoinBundle::base.html.twig' %}

{% block title %}{{ 'coin.show'|trans }}{% endblock %}

{% block body %}
<div class="page-header">
	<h1>{{ block('title') }}</h1>
</div>

<dl>
	<dt>{{ 'coin.name'|trans }}</dt>
	<dd><a href="{{ path('country_show', { 'id': coin.country.id }) }}">{{ coin.country|trans }}</a> - {{ coin.year }} - {{ coin.value }}</dd>
	<dt>{{ 'coin.commemorative'|trans }}</dt>
	<dd>{{ macros.bool(coin.commemorative) }}</dd>
	<dt>{{ 'coin.mintage'|trans }}</dt>
	<dd>{{ coin.mintage|number_format }}</dd>
	{% if coin.description %}
	<dt>{{ 'coin.description'|trans }}</dt>
	<dd>{{ coin.description|trans }}</dd>
	{% endif %}
</dl>

<div class="form-actions">
	<div class="pull-left">
		<a class="btn btn-primary" href="{{ path('coin_edit', { 'id': coin.id }) }}"><i class="icon-white icon-pencil"></i> {{ 'action.edit'|trans }}</a>
		<a class="btn" href="{{ path('coin') }}"><i class="icon-arrow-left"></i> {{ 'action.back_to_list'|trans }}</a>
	</div>

	<form action="{{ path('coin_delete', { 'id': coin.id }) }}" method="post">
		{{ form_widget(delete_form) }}

		<button class="btn btn-danger pull-right" type="submit"><i class="icon-white icon-trash"></i> {{ 'action.delete'|trans }}</button>
	</form>
</div>
{% endblock %}
