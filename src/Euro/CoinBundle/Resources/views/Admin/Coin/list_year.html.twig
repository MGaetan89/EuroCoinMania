{% extends 'SonataAdminBundle:CRUD:base_list_field.html.twig' %}

{% from "EuroCoinBundle::macros.html.twig" import year %}

{% block field %}

	{% if value %}
		{% if field_description.hasAssociationAdmin and field_description.associationadmin.hasRoute('edit') and field_description.associationadmin.isGranted('EDIT') %}
			<a href="{{ field_description.associationadmin.generateObjectUrl('edit', value) }}">{{ year(object.year)|render_relation_element(field_description) }}</a>
		{% else %}
			{{ year(object.year) }}
		{% endif %}
	{% endif %}
{% endblock %}
