{% extends '::base.html.twig' %}

{% block title %}{{ 'pm.new'|trans }}{% endblock %}

{% block body %}
<div class="page-header">
	<h1>{{ block('title') }}</h1>
</div>

<form action="{{ path('pm_new') }}" method="post" {{ form_enctype(form) }}>
    <div class="control-group">
		{{ form_label(form.to_user) }}
		{{ form_errors(form.to_user) }}
		{{ form_widget(form.to_user) }}
	</div>

    <div class="control-group">
		{{ form_label(form.title) }}
		{{ form_errors(form.title) }}
		{{ form_widget(form.title) }}
	</div>

    <div class="control-group">
		{{ form_label(form.text) }}
		{{ form_errors(form.text) }}

		<div class="btn-toolbar">
			<div class="btn-group">
				<button class="btn" title="Gras"><b>G</b></button>
				<button class="btn" title="Italique"><i>I</i></button>
				<button class="btn" title="Souligné"><u>S</u></button>
				<button class="btn" title="Barré"><s>B</s></button>
			</div>

			<div class="btn-group">
				<button class="btn" title="Insérer un lien"><i class="icon icon-globe"></i></button>
				<button class="btn" title="Insérer une image"><i class="icon icon-picture"></i></button>
				<button class="btn" title="Insérer une citation"><i class="icon icon-comment"></i></button>
			</div>
		</div>

		{{ form_widget(form.text) }}
	</div>

    <input class="btn btn-primary" type="submit" value="Envoyer" />
</form>

{% endblock %}
