<form action="{{ path }}" method="post" {{ form_enctype(form) }}>
	{% if mode == 'new' %}
    <div class="control-group">
		{{ form_label(form.to_user) }}
		{{ form_errors(form.to_user) }}
		{{ form_widget(form.to_user) }}
	</div>
	{% endif %}

    <div class="control-group">
		{{ form_label(form.title) }}
		{{ form_errors(form.title) }}
		{{ form_widget(form.title) }}
	</div>

    <div class="control-group">
		{{ form_label(form.text) }}
		{{ form_errors(form.text) }}

		<div class="btn-toolbar">
			<div class="btn-group">
				<button class="btn" title="{{ 'pm.editor.bold'|trans }}" data-markup="bold"><b>{{ 'pm.editor.bold.short'|trans }}</b></button>
				<button class="btn" title="{{ 'pm.editor.italic'|trans }}" data-markup="italic"><i>{{ 'pm.editor.italic.short'|trans }}</i></button>
				<button class="btn" title="{{ 'pm.editor.underline'|trans }}" data-markup="underline"><u>{{ 'pm.editor.underline.short'|trans }}</u></button>
				<button class="btn" title="{{ 'pm.editor.strike'|trans }}" data-markup="strike"><s>{{ 'pm.editor.strike.short'|trans }}</s></button>
			</div>

			<div class="btn-group">
				<button class="btn" title="{{ 'pm.editor.header1'|trans }}" data-markup="header1">{{ 'pm.editor.header1.short'|trans }}</button>
				<button class="btn" title="{{ 'pm.editor.header2'|trans }}" data-markup="header2">{{ 'pm.editor.header2.short'|trans }}</button>
				<button class="btn" title="{{ 'pm.editor.header3'|trans }}" data-markup="header3">{{ 'pm.editor.header3.short'|trans }}</button>
			</div>

			<div class="btn-group">
				<button class="btn" title="{{ 'pm.editor.link'|trans }}" data-markup="link"><i class="icon icon-globe"></i></button>
				<button class="btn" title="{{ 'pm.editor.image'|trans }}" data-markup="image"><i class="icon icon-picture"></i></button>
				<button class="btn" title="{{ 'pm.editor.quote'|trans }}" data-markup="quote"><i class="icon icon-comment"></i></button>
			</div>
		</div>

		{{ form_widget(form.text) }}
	</div>

	{{ form_widget(form._token) }}

    <input class="btn btn-primary" type="submit" value="{{ 'pm.send'|trans }}" />
</form>
