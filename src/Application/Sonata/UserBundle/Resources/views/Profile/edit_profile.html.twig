{% extends 'ApplicationSonataUserBundle:Profile:base.html.twig' %}

{% block content %}
{% if not gravatar_exists(user.email) %}
	<div class="alert alert-info">{{ 'user.get_avatar_info'|trans|raw }}</div>
{% endif %}

<form action="{{ path('sonata_user_profile_edit') }}" method="post">
	<div class="row-fluid">
		<div class="span6">
			{{ form_row(form.firstname, { label: 'user.firstname'|trans }) }}
			{{ form_row(form.lastname, { label: 'user.lastname'|trans }) }}
			{{ form_row(form.dateOfBirth, { label: 'user.date_of_birth'|trans }) }}
			{{ form_row(form.gender, { label: 'user.gender'|trans }) }}
			{{ form_row(form.country, { label: 'user.country'|trans }) }}
		</div>
		<div class="span6">
			{{ form_row(form.website, { label: 'user.website'|trans }) }}
			{{ form_row(form.facebookuid, { label: 'user.facebook'|trans }) }}
			{{ form_row(form.twitteruid, { label: 'user.twitter'|trans }) }}
			{{ form_row(form.gplusuid, { label: 'user.google_plus'|trans }) }}
			{{ form_row(form.timezone, { label: 'user.timezone'|trans }) }}
		</div>
	</div>

	{% include 'ApplicationSonataNewsBundle:Post:editor.html.twig' with { target: 'sonata_user_profile_form_biography' } %}

	{{ form_row(form.biography, { label: 'user.biography'|trans, attr: { class: 'span12', rows: 7 } }) }}

	{{ form_rest(form) }}

	<div class="form-actions">
		<button class="btn btn-primary" name="submit" type="submit">{{ 'user.update_profile'|trans }}</button>
	</div>
</form>
{% endblock %}

{% block javascript %}
<script src="{{ asset('bundles/applicationsonatanews/js/editor.js') }}" type="text/javascript"></script>
{% endblock %}
