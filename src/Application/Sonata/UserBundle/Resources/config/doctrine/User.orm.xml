<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
				  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
				  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
	<entity name="Application\Sonata\UserBundle\Entity\User" repository-class="Application\Sonata\UserBundle\Entity\UserRepository" table="fos_user__user">
		<id column="id" name="id" type="integer">
			<generator strategy="AUTO" />
		</id>

		<field column="country" length="2" name="country" nullable="true" type="string" />
		<field column="show_email" name="show_email" nullable="true" type="boolean" />
		<field column="coins_sort" length="4" name="coins_sort" nullable="true" type="string" />
		<field column="allow_exchanges" name="allow_exchanges" nullable="true" type="boolean" />
		<field column="exchange_notification" name="exchange_notification" nullable="true" type="boolean" />
		<field column="conversation_notification" name="conversation_notification" nullable="true" type="boolean" />
		<field column="public_profile" name="public_profile" nullable="true" type="boolean" />
	</entity>
</doctrine-mapping>
