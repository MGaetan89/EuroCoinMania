{% if pager.results %}
    <table class="table table-hover table-striped">
        <colgroup>
            <col width="20%" />
            <col width="80%" />
        </colgroup>
        <thead>
        <tr>
            <th>{{ 'news.comment.author'|trans }}</th>
            <th>{{ 'news.comment'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for comment in pager.results %}
            <tr>
                <td>
                    <i class="icon-time" title="{{ comment.createdAt|format_datetime }}"></i>
                    {{ comment.name }}
                </td>
                <td>{{ comment.message|format_text('markdown')|raw }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% else %}
    <div class="alert alert-info">{{ 'news.comments.none'|trans }}</div>
{% endif %}