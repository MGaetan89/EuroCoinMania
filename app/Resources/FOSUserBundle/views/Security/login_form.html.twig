<form action="{{ path("fos_user_security_check") }}" method="post">
	<input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

	<div class="control-group">
		<label class="control-label" for="username">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>

		<div class="controls">
			<input id="username" name="_username" type="text"{% if last_username is defined %} value="{{ last_username }}"{% endif %} />
		</div>
	</div>

	<div class="control-group">
		<label class="control-label" for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>

		<div class="controls">
			<input id="password" name="_password" type="password" />
		</div>
	</div>

	<div class="control-group">
		<div class="controls">
			<label class="checkbox">
				<input id="remember_me" name="_remember_me" type="checkbox" value="on" />
				{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}
			</label>
		</div>
	</div>

	<div class="form-actions">
		<button class="btn btn-primary" type="submit"><i class="icon-white icon-ok"></i> Connexion</button>
	</div>
</form>
