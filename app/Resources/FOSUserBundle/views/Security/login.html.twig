{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content %}
<h2 class="page-header">{{ 'user.login'|trans }}</h2>

{% if error %}
	<div>{{ error|trans({}, 'FOSUserBundle') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
	<input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

	<div class="control-group">
		<label class="control-label" for="username">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
		<div class="controls">
			<input id="username" name="_username" type="text" value="{{ last_username }}" />
		</div>
	</div>

	<div class="control-group">
		<label class="control-label" for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
		<div class="controls">
			<input id="password" name="_password" type="password" />
		</div>
	</div>

	<div class="control-group">
		<div class="controls">
			<label class="checkbox">
				<input id="remember_me" name="_remember_me" type="checkbox" value="on" />
				{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}
			</label>
		</div>
	</div>

	<div class="form-actions">
		<input class="btn btn-primary" id="_submit" name="_submit" type="submit" value="{{ 'user.login_action'|trans }}" />
	</div>
</form>
{% endblock fos_user_content %}
