{% import '::macros.html.twig' as macros %}
<!DOCTYPE html>
<html>
<head>
	<link href="{{ path('sonata_news_archive', { _format: 'rss' }) }}" rel="alternate" title="{{ 'sitename'|trans }}" type="application/rss+xml" />
	<link href="{{ asset('bundles/eurocoin/css/bootstrap.css') }}" rel="stylesheet" />
	<link href="{{ asset('bundles/eurocoin/css/style.css') }}" rel="stylesheet" />
	<link href="{{ asset('bundles/eurocoin/css/bootstrap-responsive.css') }}" rel="stylesheet" />

	<meta charset="UTF-8" />
	<meta content="width=device-width, initial-scale=1.0" name="viewport" />

	<title>{% block title %}{{ 'sitename'|trans }}{% endblock %}</title>
</head>
<body>
<div class="navbar navbar-fixed-top">
	<div class="navbar-inner">
		<div class="container-fluid">
			<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</a>

			<a class="brand" href="{{ path('welcome') }}">{{ 'sitename'|trans }}</a>

			<div class="nav-collapse">
				<ul class="nav">
					<li{{ macros.is_active('countries_list') }}><a href="{{ path('countries_list') }}">{{ 'countries.list'|trans }}</a></li>
					<li{{ macros.is_active('coin_collection') }}><a href="{{ path('coin_collection') }}">{{ 'coin.collection'|trans }}</a></li>

					{% if app.user %}
						<li{{ macros.is_active(['exchange_coins_request', 'exchange_coins_suggest', 'exchange_choose_user', 'exchange_list', 'exchange_list_all']) }}><a href="{{ path('exchange_list') }}">{{ 'exchanges'|trans }}</a></li>
					{% endif %}
				</ul>
				<ul class="nav pull-right">
					{% if app.user %}
						<li class="{{ macros.is_active('sonata_user_profile_show', 'false') }} dropdown">
							<a href="#" class="dropdown-toggle" data-toggle="dropdown">
								{{ app.user }} <b class="caret"></b>
							</a>
							<ul class="dropdown-menu">
								{% if is_granted('ROLE_ADMIN') %}
									<li><a href="{{ path('sonata_admin_dashboard') }}">Administration</a></li>
									<li class="divider"></li>
								{% endif %}

								<li{{ macros.is_active('show_profile') }}><a href="{{ path('show_profile', { id: app.user.id }) }}">{{ 'user.profile'|trans }}</a></li>
								<li><a href="#">Mes conversations</a></li>
								<li class="divider"></li>
								<li><a href="{{ path('fos_user_security_logout') }}">{{ 'user.logout'|trans }}</a></li>
							</ul>
						</li>
					{% else %}
						<li{{ macros.is_active('fos_user_security_login') }}><a href="{{ path('fos_user_security_login') }}">{{ 'user.login'|trans }}</a></li>
						<li{{ macros.is_active('fos_user_registration_register') }}><a href="{{ path('fos_user_registration_register') }}">{{ 'user.register'|trans }}</a></li>
					{% endif %}
				</ul>
			</div>
		</div>
	</div>
</div>

<div class="container-fluid">
	{% for message in app.session.flashbag.get('success') %}
	<div class="alert alert-success fade in">
		<button class="close" type="button" data-dismiss="alert">×</button>

		<strong>{{ 'congratulation'|trans }}</strong> {{ message|trans }}
	</div>
	{% endfor %}

	{% for message in app.session.flashbag.get('info') %}
	<div class="alert alert-info fade in">
		<button class="close" type="button" data-dismiss="alert">×</button>

		<strong>{{ 'information'|trans }}</strong> {{ message|trans }}
	</div>
	{% endfor %}

	{% for message in app.session.flashbag.get('error') %}
	<div class="alert alert-error fade in">
		<button class="close" type="button" data-dismiss="alert">×</button>

		<strong>{{ 'error'|trans }}</strong> {{ message|trans }}
	</div>
	{% endfor %}

	{% block body %}{% endblock %}
</div>

<div class="navbar navbar-fixed-bottom">
	<div class="navbar-inner">
		<div class="container-fluid">
			<p class="muted navbar-text pull-right">
				{{ 'site_created_by'|trans }} <a href="{{ path('show_profile', { id: 1 }) }}">M.Gaetan89</a> &mdash;
				{{ 'coin_data_provider'|trans }} <a href="http://euro-auflagen.de/">Euro Auflagen</a>
			</p>
		</div>
	</div>
</div>

<script src="{{ asset('bundles/eurocoin/js/jquery.js') }}" type="text/javascript"></script>
<script src="{{ asset('bundles/eurocoin/js/bootstrap.js') }}" type="text/javascript"></script>
{% block javascript %}{% endblock %}
</body>
</html>
