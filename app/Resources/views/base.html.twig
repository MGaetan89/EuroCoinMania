{% import "EuroCoinBundle::macros.html.twig" as macros %}
<!DOCTYPE html>
<html>
<head>
	<link href="{{ asset('bundles/eurocoin/css/bootstrap.css') }}" rel="stylesheet" />
	<link href="{{ asset('bundles/eurocoin/css/style.css') }}" rel="stylesheet" />
	<link href="{{ asset('bundles/eurocoin/css/bootstrap-responsive.css') }}" rel="stylesheet" />

	<meta charset="UTF-8" />

	<script src="{{ asset('bundles/eurocoin/js/jquery.js') }}" type="text/javascript"></script>
	<script src="{{ asset('bundles/eurocoin/js/bootstrap.js') }}" type="text/javascript"></script>
	<script src="{{ asset('bundles/eurocoin/js/app.js') }}" type="text/javascript"></script>

	<title>{% block title %}{{ 'sitename'|trans }}{% endblock %}</title>
</head>
<body>
{% set route = app.request.get('_route') %}
<div class="navbar navbar-fixed-top">
	<div class="navbar-inner">
		<div class="container-fluid">
			<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</a>

			<a class="brand" href="{{ path('EuroCoinBundle_homepage') }}">{{ 'sitename'|trans }}</a>

			<div class="nav-collapse">
				<ul class="nav">
					<li class="{% if route|slice(0, 7) == 'country' %}active {% endif %}dropdown">
						{% render "EuroCoinBundle:Country:menuList" %}
					</li>
					<li{% if route not in ['coin_doubles', 'coin_doubles_share'] and route|slice(0, 4) == 'coin' %} class="active"{% endif %}>
						<a href="{{ path('coin') }}">
							{% if app.user %}
								{{ 'coin.collection'|trans }}
							{% else %}
								{{ 'coin.list'|trans }}
							{% endif %}
						</a>
					</li>
					{% if app.user %}
					<li{% if route in ['coin_doubles', 'coin_doubles_share'] %} class="active"{% endif %}><a href="{{ path('coin_doubles') }}">{{ 'coin.doubles'|trans }}</a></li>
					{% endif %}
				</ul>

				<ul class="nav pull-right">
					{% if app.user %}
					{% render "EuroPrivateMessageBundle:PrivateMessage:hasNewMessage" %}
					<li class="{% if route|slice(0, 8) == 'fos_user' %}active {% endif %}dropdown">
						<a href="{{ path('fos_user_profile_show') }}" class="dropdown-toggle" data-toggle="dropdown" data-target="#">
							{{ app.user }}
							<b class="caret"></b>
						</a>
						<ul class="dropdown-menu">
							<li {% if route == 'pm_index' %} class="active"{% endif %}><a href="{{ path('pm_index') }}">{{ 'pm'|trans }}</a></li>
							<li{% if route == 'fos_user_profile_show' %} class="active"{% endif %}><a href="{{ path('fos_user_profile_show') }}">{{ 'user.profile'|trans }}</a></li>
							<li><a href="{{ path('fos_user_security_logout') }}">{{ 'user.logout'|trans }}</a></li>
						</ul>
					</li>
					{% else %}
					<li{% if route == 'fos_user_security_login' %} class="active"{% endif %}><a href="{{ path('fos_user_security_login') }}" id="login_toggle" title="{{ 'user.login'|trans }}">{{ 'user.login'|trans }}</a></li>
					<li><a href="{{ path('fos_user_registration_register') }}">{{ 'user.register'|trans }}</a></li>
					{% endif %}
				</ul>
			</div>
		</div>
	</div>
</div>

<div class="container-fluid">
	{% block body %}
		{% block fos_user_content %}{% endblock %}
	{% endblock %}

	<hr>

	<footer>
		<p>&copy; {{ 'sitename'|trans }} 2012</p>
	</footer>
</div>

{% if not app.user and route != 'fos_user_security_login' %}
<div class="hide" id="login_form">
	{% include "FOSUserBundle:Security:login_form.html.twig" %}
</div>
{% endif %}

{% block javascript %}
{% endblock %}
</body>
</html>
